<div class="container" id="chat-messages">
    <h4>{{chatroom}}</h4>
    {{#each comments}}
    <div class="row">
        <div class="col-md-2 col-xs-4 col-md-offset-3 col-username">
            <span class="username">Annon</span> says:
        </div>
        <div class="col-md-2 col-xs-8">
            {{this}}
        </div>
        <hr></hr>
    </div>
    {{/each}}

</div>
<div class="container-fluid">
    <div class="row message-input-container">
        {{input type="text" id="new-message" placeholder="Type and press enter..." value=newMessage action="sendMessage"}}
    </div>
</div>