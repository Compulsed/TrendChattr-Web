<div class="container">
    <h1>{{chatroom}}</h1>
</div>


<div class="container" id="chat-messages">
    {{#each chatMessages}}
    <div class="row message-row">
        {{#if this.myMessage}}
        <div class="col-sm-offset-1 col-xs-8 message message-yours">
        {{else}}
        <div class="col-sm-offset-3 col-xs-8 message message-theirs">
        {{/if}}
            {{this.message}}
        </div>
    </div>
    {{/each}}
</div>

<div class="container-fluid">
    <div class="row message-input-container">
        {{input type="text" id="new-message" placeholder="Type and press enter..." value=newMessage action="sendMessage"}}
    </div>
</div>